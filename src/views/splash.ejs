<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Elysia - Chargement</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #FF7D00;
            --primary-hover: #E66D00;
            --primary-glow: rgba(255, 125, 0, 0.15);
            --bg-darker: #18191C;
            --bg-dark: #1E2024;
            --text-primary: #FFFFFF;
            --text-secondary: #B9BBBE;
            --border-color: rgba(50, 52, 56, 0.6);
            --card-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            
            --border-radius-sm: 4px;
            --border-radius-md: 8px;
            --border-radius-lg: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: transparent;
            color: var(--text-primary);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            -webkit-app-region: drag;
        }

        .splash-container {
            background: var(--bg-dark);
            padding: 32px;
            border-radius: var(--border-radius-lg);
            text-align: center;
            box-shadow: var(--card-shadow);
            border: 1px solid var(--border-color);
            animation: fadeIn 0.3s ease-out;
            width: 320px;
        }

        .logo {
            width: 100px;
            height: 100px;
            margin-bottom: 24px;
            animation: pulse 3s infinite ease-in-out;
            border-radius: var(--border-radius-lg);
        }

        .loading-bar {
            width: 100%;
            height: 4px;
            background: rgba(255, 125, 0, 0.2);
            border-radius: var(--border-radius-sm);
            overflow: hidden;
            margin: 24px auto;
            position: relative;
        }

        .loading-progress {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 0%;
            background: var(--primary);
            animation: loading 2s infinite ease-in-out;
            border-radius: var(--border-radius-sm);
        }

        .status-text {
            font-size: 14px;
            color: var(--text-primary);
            margin-top: 16px;
            font-weight: 500;
        }

        .version-text {
            font-size: 12px;
            color: var(--text-secondary);
            margin-top: 8px;
            font-weight: 400;
        }

        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.02); opacity: 0.8; }
            100% { transform: scale(1); opacity: 1; }
        }

        @keyframes loading {
            0% {
                transform: translateX(-100%);
            }
            100% {
                transform: translateX(100%);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-message {
            color: #ED4245;
            font-size: 12px;
            margin-top: 8px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .error-message.visible {
            opacity: 1;
        }

        .loading-progress {
            transition: transform 0.3s ease;
        }

        .status-text {
            transition: color 0.3s ease;
        }

        .status-text.error {
            color: #ED4245;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <img src="<%= logoPath %>" alt="Elysia" class="logo">
        <div class="loading-bar">
            <div class="loading-progress"></div>
        </div>
        <div class="status-text">Initialisation...</div>
        <div class="version-text">Version <%= version %></div>
        <div class="error-message"></div>
    </div>

    <script>
        const { ipcRenderer } = require('electron');
        const statusText = document.querySelector('.status-text');
        const loadingProgress = document.querySelector('.loading-progress');
        const errorMessage = document.querySelector('.error-message');

        ipcRenderer.on('splash-status', (event, data) => {
            statusText.textContent = data.message;
            statusText.classList.remove('error');
            errorMessage.classList.remove('visible');
            
            if (data.progress) {
                loadingProgress.style.transform = `translateX(${data.progress - 100}%)`;
            }
        });

        ipcRenderer.on('splash-error', (event, data) => {
            statusText.textContent = 'Erreur de d√©marrage';
            statusText.classList.add('error');
            errorMessage.textContent = data.message;
            errorMessage.classList.add('visible');
            loadingProgress.style.transform = 'translateX(-100%)';
        });
    </script>
</body>
</html> 