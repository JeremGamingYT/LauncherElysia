<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Elysia - Chargement</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <style>
        :root {
            --primary: #ff7d32;
            --primary-light: #ff9a5e;
            --primary-dark: #d45f1b;
            --bg-light: #1a1a24;
            --bg-dark: #0f0f14;
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --border-color: rgba(255, 255, 255, 0.1);
            --card-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
            
            --border-radius-sm: 4px;
            --border-radius-md: 8px;
            --border-radius-lg: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: transparent;
            color: var(--text-primary);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            -webkit-app-region: drag;
        }

        .splash-container {
            background: rgba(26, 26, 36, 0.9);
            padding: 40px;
            border-radius: var(--border-radius-lg);
            text-align: center;
            box-shadow: var(--card-shadow);
            border: 1px solid var(--border-color);
            animation: fadeIn 0.3s ease-out;
            width: 360px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .splash-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('<%= bgImagePath %>') center/cover no-repeat;
            opacity: 0.2;
            z-index: -1;
        }

        .logo {
            width: 120px;
            height: 120px;
            margin-bottom: 24px;
            animation: pulse 3s infinite ease-in-out;
            border-radius: var(--border-radius-lg);
            border: 2px solid rgba(255, 125, 50, 0.5);
            box-shadow: 0 4px 16px rgba(255, 125, 50, 0.15);
        }

        .loading-bar {
            width: 100%;
            height: 6px;
            background: rgba(255, 125, 50, 0.1);
            border-radius: 3px;
            overflow: hidden;
            margin: 24px auto 8px;
            position: relative;
            box-shadow: 0 0 8px rgba(255, 125, 50, 0.2);
        }

        .loading-progress {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 0%;
            background: var(--primary);
            animation: shine 2s infinite ease-in-out;
            border-radius: 3px;
            box-shadow: 0 0 10px rgba(255, 125, 50, 0.5);
        }

        .progress-text {
            font-size: 12px;
            color: var(--text-secondary);
            margin-bottom: 16px;
            font-weight: 500;
        }

        .status-text {
            font-size: 16px;
            color: var(--text-primary);
            margin-top: 16px;
            font-weight: 500;
        }

        .version-text {
            font-size: 13px;
            color: var(--text-secondary);
            margin-top: 12px;
            font-weight: 400;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.03); box-shadow: 0 4px 20px rgba(255, 125, 50, 0.3); }
            100% { transform: scale(1); }
        }

        @keyframes shine {
            0% {
                background-position: -100px;
                background: linear-gradient(90deg, var(--primary), var(--primary-light), var(--primary));
            }
            100% {
                background-position: 100px;
                background: linear-gradient(90deg, var(--primary), var(--primary-light), var(--primary));
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-message {
            color: #f44336;
            font-size: 13px;
            margin-top: 16px;
            opacity: 0;
            transition: opacity 0.3s ease;
            background: rgba(244, 67, 54, 0.1);
            padding: 8px 12px;
            border-radius: 8px;
            border-left: 3px solid #f44336;
            text-align: left;
        }

        .error-message.visible {
            opacity: 1;
        }

        .loading-progress {
            transition: transform 0.3s ease;
        }

        .status-text {
            transition: color 0.3s ease;
        }

        .status-text.error {
            color: #f44336;
        }
        
        .footer-text {
            position: absolute;
            bottom: 20px;
            left: 0;
            width: 100%;
            text-align: center;
            font-size: 12px;
            color: var(--text-secondary);
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <img src="<%= logoPath %>" alt="Elysia" class="logo">
        <div class="loading-bar">
            <div class="loading-progress"></div>
        </div>
        <div class="progress-text">0%</div>
        <div class="status-text">Initialisation...</div>
        <div class="version-text">Version <%= version %></div>
        <div class="error-message"></div>
    </div>
    
    <div class="footer-text">© 2026 Elysia - Un monde de possibilités</div>

    <script>
        const { ipcRenderer } = require('electron');
        const statusText = document.querySelector('.status-text');
        const loadingProgress = document.querySelector('.loading-progress');
        const progressText = document.querySelector('.progress-text');
        const errorMessage = document.querySelector('.error-message');

        ipcRenderer.on('splash-status', (event, data) => {
            statusText.textContent = data.message;
            statusText.classList.remove('error');
            errorMessage.classList.remove('visible');
            
            if (data.progress) {
                loadingProgress.style.transform = `translateX(${data.progress - 100}%)`;
                progressText.textContent = `${Math.round(data.progress)}%`;
            }
        });

        ipcRenderer.on('splash-error', (event, data) => {
            statusText.textContent = 'Erreur de démarrage';
            statusText.classList.add('error');
            errorMessage.textContent = data.message;
            errorMessage.classList.add('visible');
            loadingProgress.style.transform = 'translateX(-100%)';
        });
    </script>
</body>
</html> 