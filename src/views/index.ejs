<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="<%= cssPath %>">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="titlebar">
        <div class="titlebar-title"><%= title %></div>
        <div class="titlebar-controls">
            <button class="minimize-btn" title="Réduire">
                <svg width="12" height="2" viewBox="0 0 12 2"><path d="M0 0h12v2H0z" fill="currentColor"/></svg>
            </button>
            <button class="close-btn" title="Fermer">
                <svg width="12" height="12" viewBox="0 0 12 12"><path d="M1 1l10 10m0-10L1 11" stroke="currentColor" stroke-width="2"/></svg>
            </button>
        </div>
    </div>

    <div class="container">
        <div class="sidebar">
            <div class="profile-section">
                <div class="avatar-container">
                    <div class="avatar"></div>
                    <div class="avatar-status"></div>
                </div>
                <input type="text" id="username" placeholder="Non connecté" class="username-input" readonly>
                <button id="logout-btn" class="logout-button" style="display: none;">
                    <svg width="16" height="16" viewBox="0 0 24 24" class="logout-icon">
                        <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" fill="none"/>
                    </svg>
                    Se déconnecter
                </button>
            </div>
            
            <div class="settings-section">
                <h3>Configuration</h3>
                <div class="setting-item">
                    <label for="version">Version</label>
                    <div class="select-wrapper">
                        <select id="version" class="version-select">
                            <% versions.forEach(function(version) { %>
                                <option value="<%= version %>"><%= version %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <div class="setting-item memory-setting">
                    <label for="memory-slider">Mémoire RAM</label>
                    <div class="slider-container">
                        <input type="range" id="memory-slider" min="2" max="16" step="1" value="4" class="memory-slider">
                        <div class="slider-value">
                            <span id="memory-value">4</span>
                            <span class="unit">Go</span>
                        </div>
                    </div>
                    <div class="memory-info">
                        Recommandé: 4-8 Go
                    </div>
                </div>

                <div class="setting-item game-directory">
                    <label for="game-path">Dossier d'installation</label>
                    <div class="directory-input">
                        <input type="text" id="game-path" readonly>
                        <button id="browse-btn" title="Choisir un dossier">
                            <svg width="16" height="16" viewBox="0 0 24 24" class="folder-icon">
                                <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" stroke="currentColor" stroke-width="2" fill="none"/>
                            </svg>
                        </button>
                    </div>
                    <button id="reset-path" class="reset-button" title="Réinitialiser l'emplacement">
                        <svg width="16" height="16" viewBox="0 0 24 24" class="reset-icon">
                            <path d="M3 12a9 9 0 019-9 9 9 0 019 9 9 9 0 01-9 9m0-18C7.03 3 3 7.03 3 12" stroke="currentColor" stroke-width="2" fill="none"/>
                            <path d="M12 7v5l4 4" stroke="currentColor" stroke-width="2" fill="none"/>
                        </svg>
                        Réinitialiser
                    </button>
                </div>
            </div>
        </div>

        <div class="main-content">
            <div class="news-section">
                <h2>Actualités</h2>
                <div class="news-container">
                    <% news.forEach(function(item) { %>
                        <div class="news-item">
                            <h3><%= item.title %></h3>
                            <p><%= item.content %></p>
                        </div>
                    <% }); %>
                </div>
            </div>

            <div class="launch-section">
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress"></div>
                    </div>
                    <div class="status-text">Connectez-vous pour jouer</div>
                </div>
                <button id="launch-btn" class="launch-button">SE CONNECTER</button>
            </div>
        </div>
    </div>

    <script src="<%= jsPath %>"></script>
</body>
</html>