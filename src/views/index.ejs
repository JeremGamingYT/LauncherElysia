<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="<%= cssPath %>">
</head>
<body>
    <div class="titlebar">
        <div class="titlebar-title"><%= title %></div>
        <div class="titlebar-controls">
            <button class="minimize-btn" title="R√©duire">‚îÄ</button>
            <button class="close-btn" title="Fermer">‚úï</button>
        </div>
    </div>

    <div class="container">
        <div class="sidebar">
            <div class="profile-section">
                <div class="avatar"></div>
                <input type="text" id="username" placeholder="Non connect√©" class="username-input" readonly>
                <button id="logout-btn" class="logout-button" style="display: none;">Se d√©connecter</button>
            </div>
            <div class="settings-section">
                <h3>Param√®tres</h3>
                <div class="setting-item">
                    <label for="version">Version:</label>
                    <select id="version" class="version-select">
                        <% versions.forEach(function(version) { %>
                            <option value="<%= version %>"><%= version %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="setting-item">
                    <label for="memory">RAM (Go):</label>
                    <select id="memory" class="memory-select">
                        <% memoryOptions.forEach(function(memory) { %>
                            <option value="<%= memory %>"><%= memory %> Go</option>
                        <% }); %>
                    </select>
                </div>
                <div class="setting-item game-directory">
                    <label for="game-path">Dossier du jeu:</label>
                    <div class="directory-input">
                        <input type="text" id="game-path" readonly>
                        <button id="browse-btn" title="Choisir un dossier">
                            <span class="folder-icon">üìÅ</span>
                        </button>
                    </div>
                    <button id="reset-path" class="reset-button" title="R√©initialiser l'emplacement par d√©faut">
                        <span class="reset-icon">‚Ü∫</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="main-content">
            <div class="news-section">
                <h2>Actualit√©s</h2>
                <div class="news-container">
                    <% news.forEach(function(item) { %>
                        <div class="news-item">
                            <h3><%= item.title %></h3>
                            <p><%= item.content %></p>
                        </div>
                    <% }); %>
                </div>
            </div>

            <div class="launch-section">
                <div class="progress-bar">
                    <div class="progress"></div>
                </div>
                <div class="status-text">Connectez-vous pour jouer</div>
                <button id="launch-btn" class="launch-button">SE CONNECTER</button>
            </div>
        </div>
    </div>

    <script src="<%= jsPath %>"></script>
</body>
</html>